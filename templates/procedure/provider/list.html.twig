<!DOCTYPE html>
<html>
<head>
    <title>{{ 'Procedure Providers'|translate }}</title>
    {{ includeAsset()|raw }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("tbody").on("click", "tr", function(){
                top.restoreSession();
                var ppid = $(this).data('ppid');
                dlgopen('procedure_provider_edit.php?ppid=' + ppid, '_blank', 700, 550);
            });

            $("#add").on("click", function(){
                top.restoreSession();
                dlgopen('procedure_provider_edit.php?ppid=0', '_blank', 700, 550);
            });

            $("#refresh").on("click", function () {
                document.forms[0].submit();
            })
        });

        // Callback from popups to refresh this display.
        function refreshme() {
            // location.reload();
            document.forms[0].submit();
        }
    </script>
</head>
<body class="body_top">
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <form method='post' action='procedure_provider_list.php'>
                <div class="page-header">
                    <h1>{{ 'Procedure Providers'|translate }}</h1>
                </div>
                <div class="btn-group">
                    <button type="button" name="form_search" class="btn btn-default btn-refresh" onclick="refreshme()">{{ 'Refresh'|translate }}</button>
                    <button type="button" class="btn btn-default btn-add" id="add">{{ 'Add New'|translate }}</button>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th title="{{ 'Click to view or edit'|translate|e('html_attr') }}">{{ 'Name'|translate }}</th>
                        <th>{{ 'NPI'|translate }}</th>
                        <th>{{ 'Protocol'|translate }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for p in providers %}
                    <tr title="{{ 'Edit'|translate|e('html_attr') }} {{ p.name|e('html_attr') }}" data-ppid="{{ p.ppid|e('html_attr') }}">
                        <td>{{ p.name }}</td>
                        <td>{{ p.npi }}</td>
                        <td>{{ p.protocol }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>
</html>
